#!/usr/bin/env bash
set -euo pipefail

# ============================================================
# VowKy Server Setup Script
# Initializes Nginx + SSL for vowky.com
# Run as root on your server
# ============================================================

DOMAIN="vowky.com"
EMAIL="your-email@example.com"

PROD_ROOT="/var/www/vowky/prod/site"
PROD_DOWNLOADS="/var/www/vowky/prod/downloads"
PROD_APPCAST="/var/www/vowky/prod"

echo "=== VowKy Server Setup ==="

# ----------------------------------------------------------
# 1. Create directories
# ----------------------------------------------------------
echo "[1/5] Creating directories..."
mkdir -p "$PROD_ROOT" "$PROD_DOWNLOADS"
chown -R www-data:www-data /var/www/vowky

# ----------------------------------------------------------
# 2. Install dependencies
# ----------------------------------------------------------
echo "[2/5] Installing dependencies..."
apt-get update -qq
apt-get install -y -qq certbot python3-certbot-nginx > /dev/null

# ----------------------------------------------------------
# 3. Write temporary HTTP-only Nginx config (for certbot)
# ----------------------------------------------------------
echo "[3/5] Writing temporary Nginx config for SSL certificate..."

cat > /etc/nginx/sites-available/vowky <<'NGINX_PROD_TMP'
server {
    listen 80;
    server_name vowky.com www.vowky.com;
    root /var/www/vowky/prod/site;

    location /.well-known/acme-challenge/ {
        root /var/www/vowky/prod/site;
    }

    location / {
        return 200 "VowKy setup in progress";
        add_header Content-Type text/plain;
    }
}
NGINX_PROD_TMP

# Enable site (idempotent)
ln -sf /etc/nginx/sites-available/vowky /etc/nginx/sites-enabled/vowky

nginx -t && systemctl reload nginx

# ----------------------------------------------------------
# 4. Obtain SSL certificate
# ----------------------------------------------------------
echo "[4/5] Obtaining SSL certificate..."

certbot certonly --nginx \
    -d "$DOMAIN" -d "www.$DOMAIN" \
    --email "$EMAIL" --agree-tos --no-eff-email \
    --non-interactive || echo "WARNING: certbot for prod failed, check DNS"

# ----------------------------------------------------------
# 5. Write final Nginx config with SSL
# ----------------------------------------------------------
echo "[5/5] Writing final Nginx config with SSL..."

cat > /etc/nginx/sites-available/vowky <<'NGINX_PROD'
# --- VowKy Production ---

# HTTP -> HTTPS redirect
server {
    listen 80;
    server_name vowky.com www.vowky.com;
    return 301 https://vowky.com$request_uri;
}

# www -> bare domain redirect (HTTPS)
server {
    listen 443 ssl http2;
    server_name www.vowky.com;

    ssl_certificate     /etc/letsencrypt/live/vowky.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/vowky.com/privkey.pem;
    include             /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam         /etc/letsencrypt/ssl-dhparams.pem;

    return 301 https://vowky.com$request_uri;
}

# Main production server
server {
    listen 443 ssl http2;
    server_name vowky.com;

    ssl_certificate     /etc/letsencrypt/live/vowky.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/vowky.com/privkey.pem;
    include             /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam         /etc/letsencrypt/ssl-dhparams.pem;

    root /var/www/vowky/prod/site;
    index index.html;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # Static assets cache
    location ~* \.(css|js|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$ {
        expires 7d;
        add_header Cache-Control "public, immutable";
    }

    # Downloads with hotlink protection
    location /downloads/ {
        alias /var/www/vowky/prod/downloads/;

        # Hotlink protection - allow direct access and from vowky.com
        valid_referers none blocked vowky.com *.vowky.com;
        if ($invalid_referer) {
            return 403;
        }

        sendfile on;
        directio 10m;
        output_buffers 1 512k;
        gzip off;
        send_timeout 600s;
    }

    # Appcast for Sparkle auto-update
    location = /appcast.xml {
        alias /var/www/vowky/prod/appcast.xml;
        expires 5m;
        add_header Cache-Control "public";
    }

    location / {
        try_files $uri $uri/ =404;
    }
}
NGINX_PROD

# Reload Nginx with final config
echo "Testing and reloading Nginx..."
nginx -t && systemctl reload nginx

echo ""
echo "=== VowKy Server Setup Complete ==="
echo "  Website:   https://vowky.com"
echo "  Downloads: https://vowky.com/downloads/"
echo ""
